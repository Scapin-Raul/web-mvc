@model EX4_ESTACIONAMENTO.ViewModel.CadastroViewModel;
@{
    Layout="_Layout";
}

<h2>
    Cadastro de Usuarios:
</h2>

<form method="POST" action="Cadastro/Registrar">
    <label for="name">Nome do Condutor</label>
    <input type="text" name="nome">
    <br>
    <label for="modelo">Modelo</label>
    <select name="modelo" id="">
        <option value="" disabled selected></option>
        @foreach (var modelo in Model.Modelos)
        {
            <option value="@modelo.Nome">@modelo.Nome</option>
        }
    </select>

    <label for="marca">Marca</label>    
    <select name="marca" id="">
        <option value="" disabled selected ></option>
        @foreach (var marca in Model.Marcas)
        {
            <option value="@marca.Nome">@marca.Nome</option>
        }

    </select>
    
    <br>
    <label for="placa">Placa do veiculo</label>
    <input type="text" name="placa">
    <br>

    <label for="dataDeEntrada">Data de Entrada</label>
    <input type="datetime-local" name="dataDeEntrada">

    <br>
    <input type="submit" value="Cadastrar!">
</form>